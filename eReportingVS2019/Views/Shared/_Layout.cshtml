</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand-md navbar-dark themeColor">
            <div class="container">
                <a href="index.html" class="navbar-brand">
                    <span class="brand-text font-weight-light">e-Reporting</span>
                </a>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ReportPolis">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Reminder</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Guide</a>
                        </li>
                        @*    @if (HttpContextAccessor.HttpContext.Session.GetString("_isLogin") == "1"){
                                <li class="nav-item">
                                    <a href="#" class="nav-link" asp-area="" asp-controller="ReportPolis" asp-action="Index">Report Polis</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">Cetak Report Polis</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">Butiran Peribadi</a>
                                </li>
                            }*@
                    </ul>


                    <!-- Right navbar links -->
                    <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                        <li class="nav-item">
                            <a href="#" class="nav-link">English</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Malay</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - eReportingVS2019 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
